<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundblue"
    tools:context=".User.updateProfilePade">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/firebaseimage"
        android:layout_width="180dp"
        android:layout_height="180dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />

    <Button
        android:id="@+id/backButtontohome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/right"
        android:drawableLeft="@drawable/ic_baseline_arrow_circle_left_30"
        android:paddingLeft="30dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/editProfile"
        android:layout_width="wrap_content"
        android:drawableStart="@drawable/ic_baseline_edit_24"
        android:layout_height="wrap_content"
        android:layout_below="@id/firebaseimage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="21dp"

        android:layout_marginEnd="13dp"
        android:background="@drawable/round_button_transparent"
        android:text="Edit Profile"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/updateuserProfileName"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:textSize="20dp"
        android:layout_below="@id/firebaseimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button"
        android:hint="@string/enter_full_name"
        android:padding="15dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/upadteuserProfileemail"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_below="@id/updateuserProfileName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:hint="@string/e_mail"
        android:padding="15dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/updateuserProfilemobileno"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_below="@id/upadteuserProfileemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:background="@drawable/round_button"
        android:hint="@string/mobile_number"
        android:padding="15dp"
        tools:ignore="SpeakableTextPresentCheck" />

</RelativeLayout>