<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpink"
    tools:context=".User.signUpAsAUserActivity">

    <ImageView
        android:id="@+id/Welcome"
        android:layout_width="161dp"
        android:layout_height="58dp"
        android:layout_marginStart="110dp"

        android:layout_marginTop="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059"
        app:srcCompat="@drawable/welcome"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/loginAsUserfacebookButton"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_button_blue"
        android:text="@string/facebook"
        app:layout_constraintBottom_toTopOf="@+id/loginAsUserFullName"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />



    <Button
        android:id="@+id/loginAsUsergoogleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="280dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/round_button_red"
        android:text="@string/google"
        android:textAllCaps="false"

        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/loginAsUserFullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <EditText

        android:id="@+id/loginAsUserFullName"
        android:layout_width="260dp"
        android:paddingStart="20dp"

        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"

        android:layout_marginTop="50dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="@string/enter_full_name"
        android:inputType="textPersonName"
        android:background="@drawable/round_button"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.203"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/loginAsUserMobileNumber"
        android:layout_width="260dp"
        android:paddingStart="20dp"
        android:layout_height="47dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:hint="@string/mobile_number"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsUserFullName"
        app:layout_constraintVertical_bias="0.116"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/loginAsUserEmailId"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:paddingStart="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/round_button"
        android:ems="10"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsUserMobileNumber"
        app:layout_constraintVertical_bias="0.131"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/loginAsUserPassword"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:layout_marginLeft="80dp"
        android:paddingStart="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/round_button"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsUserEmailId"
        app:layout_constraintVertical_bias="0.19"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,TextContrastCheck,TextContrastCheck" />





    <Button
        android:id="@+id/loginAsUsersignUpButton"
        android:layout_width="190dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="110dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button_green"
        android:text="@string/signup_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsUserPassword"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/loginAsUserraedytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@color/purple_700"
        android:layout_marginLeft="50dp"
        android:text="@string/already_heve_aan_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsUsersignUpButton"
        />
    <Button
        android:id="@+id/loginAsUserLoginButton"
        android:layout_width="wrap_content"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="270dp"
        android:background="@drawable/round_button_transparent"
        android:text="@string/login"
        android:textColor="@color/purple_700"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginAsUserPassword"
        app:layout_constraintVertical_bias="0.228"/>
</LinearLayout>