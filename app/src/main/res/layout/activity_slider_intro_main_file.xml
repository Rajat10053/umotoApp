<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundpink"

    android:layout_height="match_parent"
    tools:context=".User.SliderIntroMainFile">


    <androidx.cardview.widget.CardView
        android:id="@+id/viewPAger"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="#F3E4F7"
        app:cardCornerRadius="13dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3E4F7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="250dp"
                android:layout_height="250dp"

                android:layout_marginLeft="70dp"
                app:srcCompat="@drawable/carwithman" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/qualitybutton" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/nextBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBottom="@id/viewPAger"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"


        android:layout_marginBottom="40dp"
        android:background="@drawable/round_left_green_botton"

        android:drawableLeft="@drawable/ic_baseline_arrow_circle_right_30"
        android:paddingLeft="30dp"
        tools:ignore="SpeakableTextPresentCheck" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="186dp"
        android:layout_height="70dp"
        android:layout_above="@+id/viewPAger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="207dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/unomotonew" />


</RelativeLayout>